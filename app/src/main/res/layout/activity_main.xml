<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Provisions"
        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        />
    <Spinner
        android:layout_marginBottom="10dp"
        android:background="@drawable/background"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2"
            >

            <EditText
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                android:id="@+id/first"
                android:layout_margin="5dp"
                android:padding="7dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="1st semister"
                android:gravity="center"
                android:background="@drawable/background"
                />
            <EditText
                android:inputType="numberDecimal"
                android:gravity="center"
                android:id="@+id/second"
                android:layout_margin="5dp"
                android:padding="7dp"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="2st semister"
                android:background="@drawable/background"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2"
            >

            <EditText
                android:inputType="numberDecimal"
                android:gravity="center"
                android:id="@+id/third"
                android:layout_margin="5dp"
                android:padding="7dp"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="3rd semister"
                android:background="@drawable/background"
                />
            <EditText
                android:inputType="numberDecimal"
                android:gravity="center"
                android:id="@+id/four"
                android:layout_margin="5dp"
                android:padding="7dp"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="4th semister"
                android:background="@drawable/background"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2"
            >

            <EditText
                android:inputType="numberDecimal"
                android:gravity="center"
                android:id="@+id/five"
                android:layout_margin="5dp"
                android:padding="7dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="5rd semister"
                android:imeOptions="actionNext"
                android:background="@drawable/background"
                />
            <EditText
                android:inputType="numberDecimal"
                android:gravity="center"
                android:id="@+id/six"
                android:layout_margin="5dp"
                android:padding="7dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="6th semister"
                android:imeOptions="actionNext"
                android:background="@drawable/background"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2"
            >

            <EditText
                android:inputType="numberDecimal"
                android:gravity="center"
                android:id="@+id/seven"
                android:layout_margin="5dp"
                android:padding="7dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="7th semister"
                android:imeOptions="actionNext"
                android:background="@drawable/background"
                />
            <EditText
                android:inputType="numberDecimal"
                android:gravity="center"
                android:id="@+id/finals"
                android:layout_margin="5dp"
                android:padding="7dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="final semister"
                android:imeOptions="actionDone"
                android:background="@drawable/background"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="reset"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/background"
            android:layout_marginTop="15dp"
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
        <Button
            android:id="@+id/btn"
            android:onClick="calculate"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/background"
            android:layout_marginTop="15dp"
            android:text="Calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show"
            android:textSize="30sp"
            android:text="Your CGPA : "

            />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showTV"
            android:textSize="30sp"
            android:text="00.00"
            android:textStyle="bold"
            />

    </LinearLayout>


</LinearLayout>